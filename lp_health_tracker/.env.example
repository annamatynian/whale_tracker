# LP Health Tracker - Environment Configuration Example
# ===================================================
# Copy this file to .env and fill in your actual values

# =============================================================================
# BLOCKCHAIN RPC PROVIDERS (choose at least one)
# =============================================================================

# Infura API (recommended)
# Get free API key at: https://app.infura.io/
INFURA_API_KEY="your_infura_project_id_here"

# Alchemy API (alternative)
# Get free API key at: https://dashboard.alchemy.com/
ALCHEMY_API_KEY="your_alchemy_api_key_here"

# Ankr API (optional, has free public endpoints)
ANKR_API_KEY=""

# =============================================================================
# TELEGRAM BOT CONFIGURATION (required for alerts)
# =============================================================================

# Telegram Bot Token
# 1. Message @BotFather on Telegram
# 2. Send: /newbot
# 3. Follow instructions to create bot
# 4. Copy token here
TELEGRAM_BOT_TOKEN="123456789:ABCdefGHIjklMNOpqrsTUVwxyz"

# Telegram Chat ID  
# 1. Message @userinfobot on Telegram
# 2. Send: /start
# 3. Copy your user ID number here
TELEGRAM_CHAT_ID="987654321"

# =============================================================================
# PRICE DATA APIs (optional, but recommended)
# =============================================================================

# CoinGecko API Key (optional, for higher rate limits)
# Free tier: 50 requests/minute
# Pro tier: Get API key at https://www.coingecko.com/en/api
COINGECKO_API_KEY=""

# =============================================================================
# WALLET ADDRESSES TO MONITOR
# =============================================================================

# Your wallet addresses (comma-separated)
# These are used to filter relevant LP positions
# Example: "0x742d35Cc6634C0532925a3b8D41141D8F10C473d,0x..."
WALLET_ADDRESSES="0xYourWalletAddressHere"

# =============================================================================
# NETWORK AND MONITORING SETTINGS
# =============================================================================

# Default blockchain network
# Options: ethereum_mainnet, ethereum_sepolia, polygon, arbitrum
DEFAULT_NETWORK="ethereum_mainnet"

# How often to check positions (in minutes)
# Recommended: 15-30 minutes for production, 5 minutes for testing
CHECK_INTERVAL_MINUTES=15

# Default IL alert threshold (as decimal)
# 0.05 = 5%, 0.02 = 2%, etc.
DEFAULT_IL_THRESHOLD=0.05

# =============================================================================
# LOGGING AND DEBUG SETTINGS
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL="INFO"

# Save logs to file? (true/false)
LOG_TO_FILE=true

# =============================================================================
# ADVANCED SETTINGS (optional)
# =============================================================================

# Maximum concurrent API requests
MAX_CONCURRENT_REQUESTS=10

# API request timeout (seconds)
API_TIMEOUT_SECONDS=30

# Price data cache TTL (seconds)
CACHE_TTL_SECONDS=300

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================

# Set to true to use mock data instead of live APIs (for testing)
USE_MOCK_DATA=false

# Test network for development (when testing with real APIs)
TEST_NETWORK="ethereum_sepolia"

# =============================================================================
# EXAMPLE CONFIGURATIONS
# =============================================================================

# DEVELOPMENT SETUP:
# DEFAULT_NETWORK="ethereum_sepolia"
# CHECK_INTERVAL_MINUTES=5
# LOG_LEVEL="DEBUG"
# LOG_TO_FILE=false

# PRODUCTION SETUP:
# DEFAULT_NETWORK="ethereum_mainnet"  
# CHECK_INTERVAL_MINUTES=15
# LOG_LEVEL="INFO"
# LOG_TO_FILE=true

# TESTING SETUP:
# USE_MOCK_DATA=true
# CHECK_INTERVAL_MINUTES=1
# LOG_LEVEL="DEBUG"
